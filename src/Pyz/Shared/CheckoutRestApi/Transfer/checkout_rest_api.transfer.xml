<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="RestCheckoutUpdateResponse">
        <property name="isSuccess" type="bool"/>
        <property name="errors" type="RestCheckoutError[]" singular="error"/>
        <property name="quote" type="Quote"/>
    </transfer>

    <transfer name="RestCheckoutRequestAttributes">
        <property name="pointOfContact" type="RestPointOfContact" restRequestParameter="yes"/>
        <property name="approverDetails" type="ApproverDetails" restRequestParameter="yes"/>
    </transfer>

    <transfer name="RestCustomer">
        <property name="uuidCompanyUser" type="string" restRequestParameter="no"/>
    </transfer>

    <transfer name="RestCheckoutUpdateResponseAttributes">
        <property name="customer" type="RestCustomer"/>
        <property name="idCart" type="string"/>
        <property name="billingAddress" type="RestAddress"/>
        <property name="shippingAddress" type="RestAddress"/>
        <property name="payments" type="RestPayment[]" singular="payment"/>
        <property name="shipment" type="RestShipment"/>
        <property name="pointOfContact" type="RestPointOfContact"/>
        <property name="approverDetails" type="RestApproverDetails"/>
    </transfer>

    <transfer name="RestPointOfContact">
        <property name="department" type="string"/>
        <property name="firstName" type="string"/>
        <property name="lastName" type="string"/>
        <property name="phone" type="string"/>
        <property name="deliveryTime" type="string"/>
        <property name="comment" type="string"/>
    </transfer>

    <transfer name="RestApproverDetails">
        <property name="uuidQuoteApproval" type="string"/>
        <property name="status" type="string"/>
        <property name="approverId" type="string"/>
        <property name="firstName" type="string"/>
        <property name="lastName" type="string"/>
        <property name="comment" type="string"/>
        <property name="dueDate" type="string"/>
    </transfer>

</transfers>
